<?xml version="1.0" encoding="utf-8" ?>
<hibernate-configuration xmlns="urn:nhibernate-configuration-2.2">
  <session-factory>
    <property name="dialect">NHibernate.Dialect.MsSql2005Dialect</property>
    <property name="connection.provider">NHibernate.Connection.DriverConnectionProvider</property>
    <property name="connection.driver_class">NHibernate.Driver.SqlClientDriver</property>
    <property name="connection.connection_string">Data Source=.;User Id=sa;Password=cadadi;initial Catalog=envers</property>

    <property name="show_sql">true</property>
    <property name="proxyfactory.factory_class">NHibernate.ByteCode.Castle.ProxyFactoryFactory, NHibernate.ByteCode.Castle</property>

    <event type="post-insert">
      <listener class="NHibernate.Envers.Event.AuditEventListener, Envers.NET" />
    </event>
    <event type="post-update">
      <listener class="NHibernate.Envers.Event.AuditEventListener, Envers.NET" />
    </event>
    <event type="post-delete">
      <listener class="NHibernate.Envers.Event.AuditEventListener, Envers.NET" />
    </event>
    <event type="post-collection-recreate">
      <listener class="NHibernate.Envers.Event.AuditEventListener, Envers.NET" />
    </event>
    <event type="pre-collection-remove">
      <listener class="NHibernate.Envers.Event.AuditEventListener, Envers.NET" />
    </event>
    <event type="pre-collection-update">
      <listener class="NHibernate.Envers.Event.AuditEventListener, Envers.NET" />
    </event>
  </session-factory>
</hibernate-configuration>

