<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2"
                   assembly="NHibernate.Validator.Tests"
                   namespace="NHibernate.Validator.Tests.Specifics.NHV90"
                   default-lazy="true">

    <class name="TheParent">

        <id name="Id">
            <generator class="hilo"/>
        </id>

        <bag access="property" cascade="all-delete-orphan" inverse="true" name="Children" mutable="true">
            <key foreign-key="FK_ParentHasChildren">
                <column name="ChildFk" />
            </key>
            <one-to-many class="TheChild" />
        </bag>

        <property name="Name" />

    </class>

    <class name="TheChild">

        <id name="Id">
            <generator class="hilo"/>
        </id>

        <many-to-one cascade="save-update" class="TheParent" foreign-key="FK_ChildHasAParentAssociated" name="Parent">
            <column name="ContactFk" />
        </many-to-one>

        <property name="Name" />

    </class>

</hibernate-mapping>
